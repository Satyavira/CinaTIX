<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderSummary">

    <!-- Header -->
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_activity"
        android:textSize="20sp"
        android:textColor="#2D3F5C"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@id/back_button"
        app:layout_constraintTop_toTopOf="@id/back_button"
        android:layout_marginStart="8dp" />

    <!-- Movie Info Section -->
    <ImageView
        android:id="@+id/movie_poster"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:src="@drawable/iv_ordersummary"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_title"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toEndOf="@id/movie_poster"
        app:layout_constraintTop_toTopOf="@id/movie_poster"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/movie_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_genre"
        android:textSize="14sp"
        android:textColor="#8a8a8a"
        app:layout_constraintStart_toStartOf="@id/movie_title"
        app:layout_constraintTop_toBottomOf="@id/movie_title"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/movie_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_location"
        android:textSize="14sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@id/movie_genre"
        app:layout_constraintTop_toBottomOf="@id/movie_genre"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/movie_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_date_time"
        android:textSize="14sp"
        android:textColor="#8a8a8a"
        app:layout_constraintStart_toStartOf="@id/movie_location"
        app:layout_constraintTop_toBottomOf="@id/movie_location" />

    <!-- Order ID -->
    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_id"
        android:textSize="14sp"
        android:textColor="#8a8a8a"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/movie_poster"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        android:layout_marginTop="16dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/order_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Ticket Details -->
    <TextView
        android:id="@+id/ticket_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ticket_count"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/ticket_seats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ticket_seats"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="@id/ticket_count"
        app:layout_constraintEnd_toEndOf="@id/guideline_right" />

    <TextView
        android:id="@+id/seat_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seat_type"
        android:textSize="16sp"
        android:textColor="#8a8a8a"
        app:layout_constraintTop_toBottomOf="@id/ticket_count"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/seat_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp. 30.000 x 3"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/seat_type"
        app:layout_constraintEnd_toEndOf="@id/guideline_right" />

    <TextView
        android:id="@+id/service_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_fee"
        android:textSize="16sp"
        android:textColor="#8a8a8a"
        app:layout_constraintTop_toBottomOf="@id/seat_type"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/service_fee_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_fee_price"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/service_fee"
        app:layout_constraintEnd_toEndOf="@id/guideline_right" />

    <!-- Payment Method Section -->
    <TextView
        android:id="@+id/payment_method_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payment_method_lable"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/service_fee"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/payment_method_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F8F8F8"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/payment_method_label"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right">

        <!-- Icon DANA -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_dana"
            android:layout_marginTop="10dp"/>

        <!-- Container untuk Teks -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- Teks DANA -->
            <TextView
                android:id="@+id/dana_order_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dana"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium" />

            <!-- Teks Cashback -->
            <TextView
                android:id="@+id/cashback_order_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cashbackdana"
                android:textSize="14sp"
                android:textColor="#8a8a8a"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Radio Button -->
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/complete_payment_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:backgroundTint="#FCE7E7"
        android:text="@string/complete_payment"
        android:textColor="#FF6B6B"
        app:layout_constraintBottom_toTopOf="@+id/notice"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/payment_method_container" />

    <TextView
        android:id="@+id/notice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/notice"
        android:textColor="#FF6B6B"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_buttom"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/complete_payment_button" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_buttom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />
</androidx.constraintlayout.widget.ConstraintLayout>