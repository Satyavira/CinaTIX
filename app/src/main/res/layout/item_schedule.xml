<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Cinema Name -->
    <TextView
        android:id="@+id/cinema_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cinema_name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Cinema Location and Distance -->
    <TextView
        android:id="@+id/cinema_location_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cinema_loaction"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/cinema_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Cinema Type Label (like XXI) -->
    <TextView
        android:id="@+id/cinema_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/iv_logoxxi"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ticket Type -->
    <TextView
        android:id="@+id/ticket_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ticket_type"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cinema_location_distance"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Ticket Price -->
    <TextView
        android:id="@+id/ticket_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ticket_price"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/cinema_location_distance"
        app:layout_constraintStart_toEndOf="@id/ticket_type"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <!-- Showtimes Layout -->
    <LinearLayout
        android:id="@+id/showtimes_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ticket_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Showtimes (example) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:text="12:40"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/ic_border"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="14:35"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/ic_border"
            android:textColor="@color/black"
            android:textSize="12sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="18:25"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/ic_border"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <!-- Additional showtimes can be added similarly -->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
