<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:padding="16dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tombol Kembali -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Judul Bioskop -->
        <TextView
            android:id="@+id/tv_cinema_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CENTRE POINT XXI"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A2B4C"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Peta Lokasi -->
        <ImageView
            android:id="@+id/iv_map"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:src="@drawable/sample_map"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/tv_cinema_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- Informasi Alamat -->
        <TextView
            android:id="@+id/tv_cinema_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CENTRE POINT MALL LT. 3A, JL. Jawa NO.8, Kelurahan Gang Buntu, Kecamatan Medan Timur, Sumatera Utara"
            android:textSize="14sp"
            android:textColor="#666666"
            app:layout_constraintTop_toBottomOf="@id/iv_map"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Nomor Telepon -->
        <TextView
            android:id="@+id/tv_cinema_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(061) 80510321"
            android:textSize="14sp"
            android:textColor="#1A2B4C"
            app:layout_constraintTop_toBottomOf="@id/tv_cinema_address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- RecyclerView untuk Tanggal -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/tv_cinema_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_date"/>

        <!-- RecyclerView untuk Daftar Film -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_dates"
            tools:listitem="@layout/item_movie" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>