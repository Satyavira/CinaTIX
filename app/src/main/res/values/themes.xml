<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CinaTIX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

        <style name="SeatButton">
            <item name="android:layout_width">40dp</item>
            <item name="android:layout_height">40dp</item>
            <item name="android:background">@color/blue</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:layout_margin">4dp</item>
            <item name="android:gravity">center</item>
        </style>

        <style name="SeatButtonReserved">
            <item name="android:background">@color/gray</item>
        </style>

        <style name="SeatButtonSelected">
            <item name="android:background">@color/yellow</item>
        </style>

        <style name="LegendItem">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_weight">1</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:padding">8dp</item>
            <item name="android:gravity">center</item>
            <item name="android:layout_marginEnd">4dp</item>
        </style>

    <style name="Theme.CinaTIX" parent="Base.Theme.CinaTIX" />
</resources>